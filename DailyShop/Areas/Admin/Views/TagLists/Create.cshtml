@model DailyShop.Models.TagLists
@{
    ViewData["Title"] = "Create";
}
<br />

<h2 class="text-success">Create Special Tag Name</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TagList"></label>
            </div>
            <div class="col-3">
                <input asp-for="TagList" class="form-control" placeholder="Enter tag name" />
            </div>
            <span asp-validation-for="TagList" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Add" />
            <a asp-action="Index" asp-controller="TagLists" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}