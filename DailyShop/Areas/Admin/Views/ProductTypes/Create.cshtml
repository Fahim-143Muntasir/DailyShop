@model DailyShop.Models.ProductTypes
@{
    ViewData["Title"] = "Create";
}
<br />

<h2 class="text-success">Create Product Type</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-3">
                <input asp-for="ProductType" class="form-control" placeholder="Enter product type name" />
            </div>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Add" />
            <a asp-action="Index" asp-controller="ProductTypes" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}